{
	"compilerOptions": {
		"target": "ES2020",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"plugins": [{ "name": "next" }],
		"typeRoots": ["./src/types"],
		"baseUrl": ".",
		"paths": {
			"pandacss/*": ["./pandacss/*"],
			"library/*": ["./libs/*"],
			"#assets/*": ["./src/assets/*"],
			"#configs/*": ["./src/configs/*"],
			"#components/*": ["./src/components/*"],
			"#constants/*": ["./src/constants/*"],
			"#domains/*": ["./src/domains/*"],
			"#hooks/*": ["./src/hooks/*"],
			"#modules/*": ["./src/modules/*"],
			"#services/*": ["./src/services/*"],
			"#stores/*": ["./src/stores/*"],
			"#providers/*": ["./src/providers/*"],
			"#types/*": ["./src/types/*"],
			"#utils/*": ["./src/utils/*"]
		}
	},
	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		".next/types/**/*.ts",
		"node_modules/server.ts"
	],
	"exclude": ["node_modules"]
}
